<main class='grid'>

  <!-- This is where the featured map goes -->
  <div class="sticky">
    <div class="card map-card">
      <div id="NOTmap" class="map-container">
      <!-- Map goes here -->
      </div>
      <div class="card-body text-dark">
        <h5 class="card-title">Card title</h5>
        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
      </div>
    </div>
  </div>

  <!-- List of small map cards -->
  <section id="maps" class="maps">
    <!-- Maps should be rendered inside this section -->
    <% if (!maps.length) { %>
      <p> No maps exist</p>
    <%} else { %>
      <% for (const map of maps) { %>
      <div class="card map-card" >
        <div id="map-<%=map.id%>" class="map-container">

        </div>
        <div class="card-body text-dark">
          <h5 class="card-title"><%=map.title%></h5>
          <p class="card-text"><%=map.description%></p>
        </div>
      </div>
      <% } %>
    <% } %>


<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home Page</title>

  <!-- jQuery -->
  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>

  <!-- Internal Scripts -->
  <script type="text/javascript" src="/scripts/main.js"></script>
  <script type="text/javascript" src="/scripts/mark.js"></script>
  <script type="text/javascript" src="/scripts/network.js"></script>
  <script type="text/javascript" src="/scripts/createMap.js"></script>
  <script type="text/javascript" src="/scripts/mapListener.js"></script>
  <script type="text/javascript" src="/scripts/drawPins.js"></script>
  <script type="text/javascript" src="/scripts/components/search-maps.js"></script>
  <script type="text/javascript" src="/scripts/components/edit-map.js"></script>

  <!-- External Scripts -->
  <script src="https://maps.googleapis.com/maps/api/js?key=<%- apiKey %>&callback=editMap" async></script>
  <!-- These scripts are necessary for bootstrap functionality -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

  <!-- Resets -->
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />

  <!-- Fonts -->
  <link rel="stylesheet" href="http://fonts.cdnfonts.com/css/pokemon-solid">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

  <!-- Internal Styles -->
  <link rel="stylesheet" href="/styles/main.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  <!-- Map styles live here -->
  <link rel="stylesheet" href="/styles/style.css" type="text/css">
  <link rel="stylesheet" href="/styles/navbar.css" type="text/css">
  <link rel="stylesheet" href="/styles/cards.css" type="text/css">

</head>

<body>
  <!-- Navbar -->
  <%- include('./partials/_navbar'); %>
  <!-- Navbar ENDS -->


<main class='grid'>

<!-- Edit Pin Form -->
<div class="sticky">
  <% if (!map || (!map.is_public && Number(userId) !== map.user_id)) { %>
    <p> Map doesnt belong to you</p>
  <%} else { %>
  <form id="edit-map" action="/maps/<%=map.id%>/pins" method="post"  class="row g-3 m-5">
    <h1>--------------------------Edit Pin--------------------------</h1>
    <div class="col-md-6">
      <label for="lat" class="form-label">Latitude</label>
      <input class="form-control" name="lat" id="lat" type="text">
    </div>
    <div class="col-md-6">
      <label for="long" class="form-label">Longitude</label>
      <input class="form-control" name="long" id="long" type="text">
    </div>
    <div class="col-md-12">
      <label for="title" class="form-label">Title</label>
      <input class="form-control" name="title" id="title" type="text">
    </div>
    <div class="col-md-12">
      <label for="description" class="form-label">Description</label>
      <textarea class="form-control" name="description" type="text" id="description"></textarea>
    </div>
    <div class="col-md-12">
      <label for="image-url" class="form-label">Image URL</label>
      <input class="form-control" name="image-url" id="image-url" type="text">
    </div>

    <fieldset class="col-md-12">
      <legend class="col-form-label pt-0">Pin Icon:</legend>

      <div class="form-check col-md-2">
        <input class="form-check-input" type="radio" name="icon" id="default" value="/images/icons/poke-marker.svg" checked>
        <label class="form-check-label" for="default">
          Default
        </label>
      </div>

      <div class="form-check col-md-2">
        <input class="form-check-input" type="radio" name="icon" id="larry" value="/images/icons/larry.gif">
        <label class="form-check-label" for="larry">
          Larry
        </label>
      </div>

      <div class="form-check col-md-2">
        <input class="form-check-input" type="radio" name="icon" id="pokeball" value="/images/icons/pokeball.svg">
        <label class="form-check-label" for="pokeball">
          Pokeball
        </label>
      </div>

    </fieldset>

    <div class="col-12">
      <button  type="submit" id="submit" class="btn btn-primary">Submit</button>
    </div>
  </form>
</div>

  <!-- List of small map cards -->
  <section id="maps" class="maps">
    <!-- Maps should be rendered inside this section -->

      <div class="card map-card" >
        <div id="map-<%=map.id%>" class="map-container">
        </div>
        <div class="card-body text-dark">
          <h5 class="card-title"><%=map.title%></h5>
          <p class="card-text"><%=map.description%></p>
          <form action="/pins" method="post">
            <button id="delete" type="submit" class="btn btn-danger">Delete Pin</button>
          </form>
        </div>
      </div>
    <% } %>


  </section>
</main>

</body>

</html>
